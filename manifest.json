{
  "manifest_version": 2,
  "name": "DeepCart",
  "version": "1.0",
  "description": "Tracks user browsing for optimized shopping experience",
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "storage"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/cart16.png",
      "48": "icons/cart48.png",
      "128": "icons/cart128.png"
    },
    "default_title": "DeepCart",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/cart16.png",
    "48": "icons/cart48.png",
    "128": "icons/cart128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
